<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Create a new campground</h1>
		<div style="width: 30%; margin:30px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Campground Name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Campground Price" name="price" min="100" step="50">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Image URL" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Description" name="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
		
	</div>
</div>

<% include ../partials/footer %>